<div class="container dashboard">
   <div class="wrapper-head">
    <div class="row">
      <h1>Hello <%= current_user.first_name %></h1>
      <%= button_to destroy_user_session_path, class: "transparent", method: :delete do %>
        <% user = current_user %>
        <%= render "shared/avatar_large", user: user %>
      <%end%>
    </div>
    <p>Already have the funding for your needs?</p>
  </div>

  <div class="wallet">
  <%= link_to wallet_path(current_user.wallet) do%>
    <div class="wallet-card">
      <h2>Your Wallet</h2>
      <h1><%= @amount.to_i %> â‚¬</h1>
      <%= render "shared/wallet_pages" %>
    </div>
  <% end %>

    <div class="wallet-buttons">
      <%= link_to new_deposit_path do %>
        <div class="wallet-button">
          <%= image_tag "icon-deposit.svg" %>
          <p>Deposit</p>
        </div>
      <% end %>
      <%= link_to new_withdrawal_request_path do %>
        <div class="wallet-button">
          <%= image_tag "icon-withdraw.svg" %>
          <p>Withdraw</p>
        </div>
      <% end %>
      <%= link_to transactions_path do %>
        <div class="wallet-button">
          <%= image_tag "icon-portfolio.svg" %>
          <p>Transactions</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="wrapper-main">
    <h2>Find your perfect loan</h2>
    <%= render "shared/button_dashboard_cta_search" %>
  </div>
  <div class="wrapper-main">
    <h2>Your Loans</h2>
    <% if current_user.loan_requests.count == 0 %>
      <p class="gray">No loans yet</p>
    <% end %>
    <%= render "shared/cards_loan_borrower" %>
  </div>
</div>

<div class="container dashboard">
   <div class="wrapper-head">
    <div class="row">
      <h1>Hello <%= current_user.first_name %></h1>
      <%= button_to destroy_user_session_path, class: "transparent", method: :delete do %>
       <%# <%= cl_image_tag current_user.photo.key, class: "avatar" %>
      <%end%>
    </div>
    <p>Already invested in other people’s future today?</p>
  </div>

  <div class="wallet">

    <div class="wallet-card">
      <h2>Your Wallet</h2>
      <h1><%= @amount.to_i %> €</h1>
      <%= render "shared/wallet_pages" %>
    </div>

    <div class="wallet-buttons">
      <%= button_to "Cash out", "new_withdrawal_request_path" , class:"btn" %>
      <%= button_to "Cash in",  "new_deposit_path" , class: "btn" %>
    </div>
  </div>

  <div class="wrapper-main">
    <h2>Get your money working for you</h2>
    <%= render "shared/button_dashboard_cta_create" %>
  </div>
  <div class="wrapper-main">
    <h2>Your Loans</h2>
    <% if current_user.loans.nil? %>
      <p class="gray"><%="No Loans yet"%></p>
    <% end %>
    <%= render "shared/cards_loan_lender" %>
  </div>
</div>

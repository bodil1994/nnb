<% if current_user.user_type == "Lender"  %>
<div id="message-<%= message.id %>">
  <small>
  <div class="msg-wrapper l-msg-style">
 <div class="name - time">
    <strong><%= "#{message.user.last_name} #{message.user.first_name}" %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M") %></i>
  </div>
  <div class="txt-msg">
  </small>
  <p><%= message.content %></p>
  </div>
  </div>
<% else  %>
<div id="message-<%= message.id %>">
  <small>
  <div class="msg-wrapper col b-msg-style">
 <div class="name - time">
    <strong><%= "#{message.user.last_name} #{message.user.first_name}" %></strong>
    <i><%= message.created_at.strftime("%a, %b %e at %l:%M") %></i>
  </div>
  <div class="txt-msg">
  </small>
  <p><%= message.content %></p>
  </div>
  </div>

<% end %>
</div>

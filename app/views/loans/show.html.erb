<div class="container summary-pages loan-show">
  <%= render "shared/back_navigation", path: loans_path %>
  <h1 class="light"> Loan Description</h1>

  <% if current_user.user_type = "Lender" && current_user = @loan.user && @loan.status = "Active" %>
    <div class="wrapper-avatar">
      <%= image_tag "avatar-icon.png", class: "avatar, avatar__large" %>
      <p>Accepted by <%= @loan_request.user.first_name %> <%= @loan_request.user.last_name %> - <%= @loan_request.user.profession %><br>
      <%= @loan_request.user.address %><br>
      Email: <%= @loan_request.user.email %>, Tel.: <%= @loan_request.user.phone %></p>
    </div>
    <div class="notice-box notice-box__purple">
      <p> <strong><%= @loan_request.title %></strong>: <%= @loan_request.description %> </p>
      <%= image_tag "icon-info.svg", class: "icon icon__info" %>
    </div>

  <% elsif current_user.user_type = "Lender" && current_user = @loan.user && @loan.status != "Active" %>
    <div>
    </div>
  <% else %>
    <div class="wrapper-avatar">
      <%= image_tag "avatar-icon.png", class: "avatar, avatar__large" %>
      <p>by <%= @loan.user.first_name %><%= @loan.user.last_name %><br>
      <%= @loan.user.address %></p>
    </div>
    <div class="notice-box notice-box__purple">
      <% if @loan.payment_frequency = "monthly" %>
        <% number_of_payments = @loan.payback_time %>
      <% elsif @loan.payment_frequency = "weekly" %>
        <% number_of_payments = @loan.payback_time * 4 %>
      <% end %>
      <p>You will receive <%= @loan.instant_loan ? "an instant loan" : "a manually-approved loan" %>
      of <%= @loan.amount.to_i %> €, with <%= number_of_payments %> <%= @loan.payment_frequency %>
      payments of <%= @loan.amount.to_i / number_of_payments %> € each, in total you will pay back
      <%= @loan.amount.to_i * (1 + (@loan.interest_rate.to_f / 100)) %> €.</p>
      <%= image_tag "icon-info.svg", class: "icon icon__info" %>
    </div>
  <% end %>
  <div class="list-box">
    <div class="list-item">
      <div>Amount</div>
      <div><%= @loan.amount.to_i %> €</div>
    </div>
    <div class="list-item">
      <div>Payment Duration</div>
      <div><%= @loan.payback_time %> months</div>
    </div>
    <div class="list-item">
      <div>Payment Frequency</div>
      <div><%= @loan.payment_frequency %></div>
    </div>
    <div class="list-item">
      <div>Interest Rate</div>
      <div><%= @loan.interest_rate.to_i %>%</div>
    </div>
    <div class="list-item">
      <div>Category</div>
      <div><%= @loan.loan_category %></div>
    </div>
    <div class="list-item">
      <div>Approval</div>
      <div><%= @loan.instant_loan ? "Auto" : "Manual" %></div>
    </div>
  </div>
  <%= link_to "APPLY", new_loan_loan_request_path(@loan), class: "btn" %>
</div>

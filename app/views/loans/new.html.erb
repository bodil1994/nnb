<div class="container">
  <div class="back">
  </div>
  <div class="header">
    <h1>Create a loan</h1>
  </div>
  <div class="flex">
    <div class="selector-field">
      <div class="title">
        <p>How much money do you want to lend?</p>
      </div>
      <div class="flex-selectors">
        <div class="selector">
        </div>
      </div>
    </div>
    <%= simple_form_for @loan do |f| %>
    <div class="dropdown">
      <%= f.input :payback_time, label: 'Payment Duration', :collection => %w[Week Month Quater Year], placeholder: 'Select' %>
    </div>
    <div class="dropdown">
      <%= f.input :payment_frequency, label: 'Payment Frequency', :collection => %w[Weekly Monthly Quaterly Yearly], placeholder: 'Select' %>
    </div>
    <div class="input">
      <%= f.input :interest_rate, label: 'What is the Interest rate that you expect ?', error: 'Interest rate is mandatory, please specify one' %>
    </div>
    <div class="dropdown">
      <%= f.input :loan_category, label: 'For which project do you want to loan your money for ?', :collection => %w[Education Health Insurance Business], placeholder: 'Select' %>
    </div>
    <div class="dropdown">
      <%= f.input :instant_loan, label: 'How do you want to approve the loan?', :collection => %w[Auto Manual], placeholder: 'Select' %>
    </div>
    <div class="button">
      <%= f.button :submit %>
    </div>
    <% end %>
  </div>
</div>
